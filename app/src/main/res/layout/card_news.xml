<?xml version="1.0" encoding="utf-8"?>
<com.oshaev.wayfarer.SquareCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="@dimen/corner_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.oshaev.wayfarer.SquareImageView
            android:id="@+id/articleImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            ></com.oshaev.wayfarer.SquareImageView>

        <TextView
            android:id="@+id/articleTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:layout_margin="10dp"
            android:layout_above="@id/articleSummaryTextView"
            style="@style/titleTextStyle"
            ></TextView>

        <TextView
            android:id="@+id/articleSummaryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Summary"
            android:layout_margin="10dp"
            style="@style/summaryTextStyle"
            android:layout_alignParentBottom="true"
            ></TextView>

    </RelativeLayout>

</com.oshaev.wayfarer.SquareCardView>